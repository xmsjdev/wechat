{
    "name": "xmsjdev/wechat",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "easywechat"
    ],
    "description": "easywechat for hyperf",
    "autoload": {
        "psr-4": {
            "Xmsjdev\\Wechat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=8.1",
        "hyperf/guzzle": "^3.1",
        "hyperf/super-globals": "^3.1",
        "w7corp/easywechat": "^6.19"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^10.0",
        "swoole/ide-helper": "dev-master"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Xmsjdev\\Wechat\\ConfigProvider"
        }
    }
}
